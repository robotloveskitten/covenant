<div class="min-h-screen bg-base-100">
  <!-- Header -->
  <header class="border-b border-base-200 bg-base-100">
    <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <%= link_to tasks_path, class: "text-base-content/60 hover:text-base-content" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <h1 class="text-xl font-medium text-base-content">Settings</h1>
      </div>
    </div>
  </header>

  <main class="max-w-4xl mx-auto px-6 py-8">
    <div class="space-y-8">
      <!-- Profile Settings -->
      <section>
        <h2 class="text-lg font-medium text-base-content mb-4">Profile</h2>

        <%= form_with model: @user, url: settings_path, method: :patch, html: { class: "card bg-base-100 border border-base-200" } do |f| %>
          <div class="card-body space-y-4">
            <% if @user.errors.any? %>
              <div class="alert alert-error">
                <ul class="list-disc list-inside text-sm">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-control">
              <%= f.label :name, class: "label" %>
              <%= f.text_field :name, class: "input input-bordered w-full max-w-md", placeholder: "Your name" %>
            </div>

            <div class="form-control">
              <%= f.label :email, class: "label" %>
              <%= f.email_field :email, class: "input input-bordered w-full max-w-md", placeholder: "you@example.com" %>
            </div>

            <div class="pt-2">
              <%= f.submit "Save changes", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </section>

      <!-- Password Settings -->
      <section>
        <h2 class="text-lg font-medium text-base-content mb-4">Change Password</h2>

        <%= form_with model: @user, url: settings_path, method: :patch, html: { class: "card bg-base-100 border border-base-200" } do |f| %>
          <div class="card-body space-y-4">
            <div class="form-control">
              <%= f.label :current_password, class: "label" %>
              <%= f.password_field :current_password, class: "input input-bordered w-full max-w-md", placeholder: "Current password", autocomplete: "current-password" %>
            </div>

            <div class="form-control">
              <%= f.label :password, "New password", class: "label" %>
              <%= f.password_field :password, class: "input input-bordered w-full max-w-md", placeholder: "New password", autocomplete: "new-password" %>
              <label class="label">
                <span class="label-text-alt text-base-content/60">Leave blank to keep current password</span>
              </label>
            </div>

            <div class="form-control">
              <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
              <%= f.password_field :password_confirmation, class: "input input-bordered w-full max-w-md", placeholder: "Confirm new password", autocomplete: "new-password" %>
            </div>

            <div class="pt-2">
              <%= f.submit "Update password", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </section>

      <!-- Organization Settings Link (Admin Only) -->
      <% if current_organization && current_user.admin_of?(current_organization) %>
        <section>
          <h2 class="text-lg font-medium text-base-content mb-4">Organization</h2>
          <div class="card bg-base-100 border border-base-200">
            <div class="card-body">
              <p class="text-base-content/70 mb-4">
                You're an admin of <strong><%= current_organization.name %></strong>.
                Manage your organization settings, team members, and invitations.
              </p>
              <%= link_to "Organization Settings", organization_path, class: "btn btn-outline" %>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  </main>
</div>
