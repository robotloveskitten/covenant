<%= link_to task_path(task), 
    class: "kanban-card block bg-base-100 rounded-lg p-3 shadow-sm hover:shadow transition-shadow cursor-pointer",
    data: { id: task.id, kanban_target: "card" } do %>
  <div class="flex items-start gap-2">
    <div class="w-1 h-full rounded-full <%= task_type_color(task.task_type) %> self-stretch"></div>
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-base-content truncate"><%= task.title %></p>
      <div class="flex items-center gap-2 mt-2">
        <span class="text-xs text-base-content/40 uppercase"><%= task.task_type %></span>
        <% if task.due_date %>
          <span class="text-xs text-base-content/50"><%= task.due_date.strftime("%b %d") %></span>
        <% end %>
      </div>
      <% if task.assignee %>
        <div class="mt-2">
          <span class="text-xs text-base-content/50"><%= task.assignee.display_name %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
