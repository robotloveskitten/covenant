<%= link_to task_path(task), class: "block group" do %>
  <div class="flex items-center gap-4 px-4 py-3 rounded-lg hover:bg-base-200/50 transition-colors">
    <!-- Type indicator -->
    <div class="w-1 h-8 rounded-full <%= task_type_color(task.task_type) %>"></div>
    
    <!-- Content -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <span class="font-medium text-base-content truncate"><%= task.title %></span>
        <span class="text-xs text-base-content/40 uppercase"><%= task.task_type %></span>
      </div>
      <% if task.children.any? %>
        <span class="text-xs text-base-content/50"><%= task.children.count %> items</span>
      <% end %>
    </div>

    <!-- Status -->
    <div class="flex items-center gap-3">
      <span class="badge badge-sm <%= status_badge_class(task.status) %>"><%= task.status_label %></span>
      <% if task.assignee %>
        <span class="text-xs text-base-content/50"><%= task.assignee.display_name %></span>
      <% end %>
      <% if task.due_date %>
        <span class="text-xs text-base-content/50"><%= task.due_date.strftime("%b %d") %></span>
      <% end %>
    </div>
  </div>
<% end %>
