<div class="min-h-screen">
  <!-- Header -->
  <header class="border-b border-base-200 bg-base-100">
    <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
      <h1 class="text-xl font-medium text-base-content">Covenant</h1>
      <div class="flex items-center gap-4">
        <% if user_signed_in? %>
          <span class="text-sm text-base-content/60"><%= current_user.display_name %></span>
          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm text-base-content/60 hover:text-base-content" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm text-base-content/60 hover:text-base-content" %>
        <% end %>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main class="max-w-6xl mx-auto px-6 py-8">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold text-base-content">All Tasks</h2>
      <% if user_signed_in? %>
        <%= link_to new_task_path, class: "btn btn-sm btn-ghost" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New
        <% end %>
      <% end %>
    </div>

    <% if @tasks.any? %>
      <div class="space-y-1">
        <% @tasks.each do |task| %>
          <%= render partial: 'task_list_item', locals: { task: task } %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <p class="text-base-content/50 mb-4">No tasks yet</p>
        <% if user_signed_in? %>
          <%= link_to "Create your first task", new_task_path, class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    <% end %>
  </main>
</div>
