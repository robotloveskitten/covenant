<div class="min-h-screen flex items-center justify-center bg-base-200 px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-lg">
    <div class="card-body">
      <h2 class="card-title text-2xl font-semibold mb-6">Create your account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <% if params[:invitation_token].present? %>
          <%= f.hidden_field :invitation_token, value: params[:invitation_token] %>
          <div class="alert alert-info">
            <span>You've been invited to join an organization. Complete signup to accept.</span>
          </div>
        <% else %>
          <div class="form-control">
            <%= f.label :organization_name, "Organization name", class: "label" %>
            <%= f.text_field :organization_name, class: "input input-bordered w-full", placeholder: "Your company or team name" %>
            <label class="label">
              <span class="label-text-alt text-base-content/60">Leave blank to use your name</span>
            </label>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "Your name" %>
        </div>

        <div class="form-control">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "you@example.com" %>
        </div>

        <div class="form-control">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Password" %>
          <% if @minimum_password_length %>
            <label class="label">
              <span class="label-text-alt text-base-content/60"><%= @minimum_password_length %> characters minimum</span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :password_confirmation, "Confirm password", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Confirm password" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">or</div>

      <p class="text-center text-sm text-base-content/60">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "link link-primary" %>
      </p>
    </div>
  </div>
</div>
