<div class="min-h-screen flex items-center justify-center bg-base-200 px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-lg">
    <div class="card-body">
      <h2 class="card-title text-2xl font-semibold mb-6">Sign in to Covenant</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <% if flash[:alert] %>
          <div class="alert alert-error">
            <span><%= flash[:alert] %></span>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "you@example.com" %>
        </div>

        <div class="form-control">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-3">
              <%= f.check_box :remember_me, class: "checkbox checkbox-sm" %>
              <span class="label-text">Remember me</span>
            </label>
          </div>
        <% end %>

        <div class="form-control mt-6">
          <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">or</div>

      <p class="text-center text-sm text-base-content/60">
        Don't have an account?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "link link-primary" %>
      </p>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <p class="text-center text-sm text-base-content/60 mt-2">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link link-hover" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
