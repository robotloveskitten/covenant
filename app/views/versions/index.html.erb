<div class="min-h-screen">
  <header class="border-b border-base-200 bg-base-100">
    <div class="max-w-3xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <div>
          <nav class="text-sm text-base-content/50 mb-1">
            <%= link_to @task.title, task_path(@task), class: "hover:text-base-content" %>
            <span>/</span>
            <span class="text-base-content">Version History</span>
          </nav>
          <h1 class="text-xl font-semibold text-base-content">Version History</h1>
        </div>
        <%= link_to task_path(@task), class: "btn btn-sm btn-ghost" do %>
          Back
        <% end %>
      </div>
    </div>
  </header>

  <main class="max-w-3xl mx-auto px-6 py-8">
    <% if @versions.any? %>
      <div class="space-y-4">
        <% @versions.each do |version| %>
          <div class="border border-base-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center gap-3">
                <span class="badge badge-sm badge-outline">v<%= version.version_number %></span>
                <span class="font-medium text-base-content"><%= version.title %></span>
              </div>
              <div class="flex items-center gap-4">
                <span class="text-sm text-base-content/50"><%= version.created_at.strftime("%b %d, %Y at %I:%M %p") %></span>
                <% if version.user %>
                  <span class="text-sm text-base-content/50">by <%= version.user.display_name %></span>
                <% end %>
              </div>
            </div>
            
            <div class="flex gap-2 mt-3">
              <%= link_to "View", task_version_path(@task, version), class: "btn btn-xs btn-ghost" %>
              <%= button_to "Restore", restore_task_version_path(@task, version), 
                  method: :post,
                  data: { turbo_confirm: "Are you sure you want to restore this version?" },
                  class: "btn btn-xs btn-ghost" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <p class="text-base-content/50">No version history yet</p>
      </div>
    <% end %>
  </main>
</div>
